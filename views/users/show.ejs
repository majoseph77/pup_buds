<!DOCTYPE html>
<html>
  <head>
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="../../stylesheets/css/register.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="../../stylesheets/css/materialize.min.css"  media="screen,projection"/>
  </head>

  <body>
    <%- include ../partials/navbar.ejs %>

    <div class="container">
      <h1 class="#4db6ac teal-text lighter-2">Your Profile</h1>
    </div>

    <br></br>

    <div class="">
      <div class="row container">

        <div class="col s4">
          <img src=<%= user.url %> alt="" class="responsive-img">
        </div>

        <div class="col s1"><br></br></div>

        <div class="col s4">
          <h4 class="teal-text">Name</h4>
          <%= user.name %>
        </div>

      </div>

      <div class="row container">

        <div class="col s4">
          <h5 class="teal-text">Age</h5>
          <%= user.age %>
        </div>

        <div class="col s1"><br></br></div>

        <div class="col s4">
          <h5 class="teal-text">Zip</h5>
          <%= user.zipCode %>
        </div>

      </div>

      <div class="row container">

        <div class="col s12">
          <h5 class="teal-text">Bio</h5>
          <%= user.bio %>
        </div>

      </div>
    </div>

    <br></br>

    <div class="container center">
      <a class="waves-effect waves-light red btn">Edit Profile</a>
    </div>

    <!-- page seperator -->

    <br></br>

    <div class="container">
      <hr></hr>
    </div>

    <!-- Puppy info -->

    <div class="container">
      <h1 class="#4db6ac teal-text lighter-2">Your Puppies</h1>
    </div>


     <div class="row container">
        <div class="col s12 m6">

          <div class="card hoverable">
            <div class="card-image">
              <img src="/images/tree_sniff.gif">
              <span class="card-title">Shadow</span>
            </div>

            <div class="card-content">
              <p>Shadow is a very good boy</p>
            </div>
            <div class="card-action">
              <a href="#">See Puppy Page</a>
            </div>
            <div class="card-action">
              <a href="#">Edit Puppy Info</a>
            </div>
          </div>
        </div>
      </div>
    <!-- <//% });%> -->

      <div class="container center-align">
        <a class="waves-effect waves-light red btn">Add Puppy</a>
      </div>


    <!-- end of puppy stuff -->

    <form action="/users/show/:id" method="GET" enctype="multipart/form-data">
    </form>

    <!-- footer -->
    <%- include ../partials/feeter %>

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="../../js/materialize.min.js"></script>
    <script src="../../js/main.js"></script>
  </body>
</html>
