<!DOCTYPE html>
<html>
  <%- include ../partials/head %>
  <body>
    <script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '149730395363094',
      xfbml      : true,
      version    : 'v2.4'
    });
  };
  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>

  <%- include ../partials/nav %>

  <!-- email -->
  <form action="/login" method="POST">
    <div class="center align">
      <h1 class="#4db6ac teal-text lighter-2 center">Log In</h1>
      <div class="row container center-align">
        <div class="col s3"><br></br></div>
        <div class="input-field col s6 center">
          <input name="username" id="name" type="text" placeholder="email">
        </div>
      </div>

      <!-- password -->
      <div class="row container center-align">
        <div class="col s3"><br></br></div>
        <div class="input-field col s6 center">
          <input name="password" id="name" type="text" placeholder="password">
        </div>
      </div>


      <button class="btn waves-effect waves-light btn-sent red accent-2 z-depth-2 btn-large" type="submit" name="action">Log In<i class="material-icons red lighten-2"></i></button>


    </div>

  </form>

  <br></br>

  <div class="container center-align">
    <a class="waves-effect waves-light #5c6bc0 indigo lighten-1 btn-large" href="/auth/facebook">Log In with Facebook</a>
    <a class="waves-effect waves-light #42a5f5 blue lighten-1 btn-large" href="/auth/twitter">Log In with Twitter</a>
  </div>

    <br></br>

    <!-- sign up redirect -->
    <div class="signup-action center-align">
      <h8>Don't have an account?</h8>
      <a href="auth/register">Signup</a>
    </div>
  </div>

  <br></br>

  <!-- footer -->
  <%- include ../partials/feeter %>

  <!-- js -->
  <%- include ../partials/footer_js %>


  </body>
</html>
