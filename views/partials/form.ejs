<form action="/auth/register" method="POST">

  <div class="row">

    <div class="input-field col s12">
      <input placeholder="name" name="name" id="name" type="text" class="validate">
    </div>

    <div class="input-field col s12">
      <input placeholder="username" name="username" id="username" type="email" class="validate">
    </div>

    <div class="input-field col s6">
      <input placeholder="zipcode" name="zipCode" id="zipCode" type="text" class="validate">
    </div>

    <div class="input-field col s6">
      <input placeholder="age" name="age" id="age" type="text" class="validate">
    </div>

    <div class="input-field col s12">
      <input placeholder="password" name="password" id="password" type="text" class="validate">
    </div>

    <br>

    <h5>Describe yourself</h5>

    <i class="material-icons prefix left">mode_edit</i>

    <div class="input-field col s12 left">
      <textarea name="bio" id="textarea1" class="materialize-textarea" placeholder="description"></textarea>
    </div>

    <div class="file-field input-field col s12">

      <h5>Profile Photo</h5>

      <input class="file-path validate" name="picture" type="text"/>

      <div class="btn center- align red accent-2">
        <span>File</span>
        <input type="file" />
      </div>

    </div>

    <button class="btn waves-effect waves-light btn-sent register-btn red accent-2 z-depth-2" type="submit" name="action">Submit<i class="material-icons red lighten-2"></i></button>

  </div>
</form>

